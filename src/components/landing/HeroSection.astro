---
import Logo from "./Logo.astro";
import Tagline from "./Tagline.astro";
import { LoginButton } from "./LoginButton";
---

<!-- Hero section with gradient background -->
<main class="relative flex min-h-screen flex-col items-center justify-center px-4 py-12">
  <!-- Background gradient -->
  <div
    class="absolute inset-0 -z-10 bg-[radial-gradient(ellipse_at_top,_var(--tw-gradient-stops))] from-primary/20 via-background to-background"
    aria-hidden="true"
  >
  </div>

  <!-- Content -->
  <div class="flex w-full max-w-lg flex-col items-center gap-8 text-center">
    <Logo />
    <Tagline />
    <LoginButton client:load />

    <!-- Noscript fallback -->
    <noscript>
      <a
        href="/auth/login"
        class="inline-flex h-12 items-center justify-center rounded-lg bg-primary px-6 text-base font-medium text-primary-foreground transition-colors hover:bg-primary-hover"
      >
        Zaloguj się
      </a>
    </noscript>
  </div>

  <!-- Decorative elements -->
  <div
    class="absolute bottom-10 left-1/2 -translate-x-1/2 text-xs text-muted-foreground/50"
  >
    Tworzony z pasją dla wędkarzy
  </div>
</main>
