---
/**
 * Trip details page.
 * Displays full information about a specific fishing trip.
 *
 * Route: /app/trips/[id]
 * Access: Requires authentication (owner of the trip)
 */
import AppLayout from "@/layouts/AppLayout.astro";
import { TripDetailsView } from "@/components/trip-details";

const { id } = Astro.params;

// Validate that id is present
if (!id) {
  return Astro.redirect("/app");
}
---

<AppLayout title="Szczegóły wyprawy" showBackButton>
  <TripDetailsView client:load tripId={id} />
</AppLayout>
