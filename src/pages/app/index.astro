---
/**
 * Dashboard page - main view for logged-in users.
 * Displays the list of fishing trips.
 */
import AppLayout from "@/layouts/AppLayout.astro";
---

<AppLayout title="Wyprawy" showFAB fabLabel="Nowa wyprawa" fabHref="/app/trips/new">
  <div class="space-y-6">
    <!-- Welcome section -->
    <div class="geist-card p-6">
      <div class="flex items-start gap-4">
        <div class="flex h-12 w-12 items-center justify-center rounded-xl bg-primary/10 text-primary">
          <!-- Fish icon -->
          <svg class="h-6 w-6" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M6.5 12c.94-3.46 4.94-6 8.5-6 3.56 0 6.06 2.54 7 6-.94 3.47-3.44 6-7 6-3.56 0-7.56-2.53-8.5-6Z"></path>
            <path d="M18 12v.5"></path>
            <path d="M16 17.93a9.77 9.77 0 0 1 0-11.86"></path>
            <path d="M7 10.67C7 8 5.58 5.97 2.73 5.5c-1 1.5-1 5 .23 6.5-1.24 1.5-1.24 5 .23 6.5C6.58 18.03 7 16 7 13.33"></path>
            <path d="M10.46 7.26C10.2 5.88 9.17 4.24 8 3h5.8a2 2 0 0 1 1.98 1.67l.23 1.4"></path>
            <path d="m16.01 17.93-.23 1.4A2 2 0 0 1 13.8 21H9.5a5.96 5.96 0 0 0 1.49-3.98"></path>
          </svg>
        </div>
        <div class="flex-1">
          <h2 class="text-lg font-semibold text-foreground">Witaj w Dzienniku!</h2>
          <p class="mt-1 text-sm text-muted-foreground">
            Tutaj znajdziesz wszystkie swoje wyprawy wędkarskie. 
            Kliknij przycisk poniżej, aby dodać pierwszą.
          </p>
        </div>
      </div>
    </div>

    <!-- Empty state -->
    <div class="gradient-border">
      <div class="bg-card rounded-lg border border-border p-12 text-center">
        <div class="mx-auto flex h-16 w-16 items-center justify-center rounded-2xl bg-secondary text-muted-foreground">
          <!-- Calendar icon -->
          <svg class="h-8 w-8" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M8 2v4"></path>
            <path d="M16 2v4"></path>
            <rect width="18" height="18" x="3" y="4" rx="2"></rect>
            <path d="M3 10h18"></path>
          </svg>
        </div>
        <h3 class="mt-4 text-base font-medium text-foreground">Brak wypraw</h3>
        <p class="mt-2 text-sm text-muted-foreground max-w-sm mx-auto">
          Nie masz jeszcze żadnych zapisanych wypraw. Dodaj swoją pierwszą wyprawę, aby rozpocząć.
        </p>
        <a
          href="/app/trips/new"
          class="mt-6 inline-flex items-center gap-2 rounded-lg bg-primary px-4 py-2 text-sm font-medium text-primary-foreground transition-colors hover:bg-primary-hover hover:shadow-glow"
        >
          <!-- Plus icon -->
          <svg class="h-4 w-4" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M5 12h14"></path>
            <path d="M12 5v14"></path>
          </svg>
          Dodaj wyprawę
        </a>
      </div>
    </div>

    <!-- Example cards (will be replaced with real data) -->
    <div class="space-y-3">
      <h3 class="text-sm font-medium text-muted-foreground uppercase tracking-wider">
        Ostatnie wyprawy
      </h3>
      
      <!-- Example trip card -->
      <div class="geist-card-glow shine cursor-pointer">
        <div class="flex items-center gap-4">
          <div class="flex h-10 w-10 items-center justify-center rounded-lg bg-success/10 text-success">
            <!-- Fish icon -->
            <svg class="h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M6.5 12c.94-3.46 4.94-6 8.5-6 3.56 0 6.06 2.54 7 6-.94 3.47-3.44 6-7 6-3.56 0-7.56-2.53-8.5-6Z"></path>
              <path d="M18 12v.5"></path>
              <path d="M16 17.93a9.77 9.77 0 0 1 0-11.86"></path>
              <path d="M7 10.67C7 8 5.58 5.97 2.73 5.5c-1 1.5-1 5 .23 6.5-1.24 1.5-1.24 5 .23 6.5C6.58 18.03 7 16 7 13.33"></path>
              <path d="M10.46 7.26C10.2 5.88 9.17 4.24 8 3h5.8a2 2 0 0 1 1.98 1.67l.23 1.4"></path>
              <path d="m16.01 17.93-.23 1.4A2 2 0 0 1 13.8 21H9.5a5.96 5.96 0 0 0 1.49-3.98"></path>
            </svg>
          </div>
          <div class="flex-1 min-w-0">
            <h4 class="text-sm font-medium text-foreground truncate">Jezioro Solińskie</h4>
            <div class="flex items-center gap-3 mt-1 text-xs text-muted-foreground">
              <span class="flex items-center gap-1">
                <!-- Calendar icon -->
                <svg class="h-3 w-3" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M8 2v4"></path>
                  <path d="M16 2v4"></path>
                  <rect width="18" height="18" x="3" y="4" rx="2"></rect>
                  <path d="M3 10h18"></path>
                </svg>
                15 gru 2025
              </span>
              <span class="flex items-center gap-1">
                <!-- MapPin icon -->
                <svg class="h-3 w-3" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M20 10c0 4.993-5.539 10.193-7.399 11.799a1 1 0 0 1-1.202 0C9.539 20.193 4 14.993 4 10a8 8 0 0 1 16 0"></path>
                  <circle cx="12" cy="10" r="3"></circle>
                </svg>
                Bieszczady
              </span>
            </div>
          </div>
          <div class="text-right">
            <span class="text-lg font-semibold text-foreground">3</span>
            <span class="text-xs text-muted-foreground block">ryby</span>
          </div>
        </div>
      </div>
    </div>
  </div>
</AppLayout>
